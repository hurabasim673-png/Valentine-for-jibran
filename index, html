<script>
// Floating hearts
function createHearts(){
    for(let i=0;i<30;i++){
        let h=document.createElement('div');
        h.classList.add('heart');
        h.style.left=Math.random()*100+'vw';
        h.style.animationDuration=(3+Math.random()*5)+'s';
        document.body.appendChild(h);
    }
}
createHearts();
document.addEventListener('mousemove', e=>{
    let h=document.createElement('div');
    h.classList.add('heart');
    h.style.left=e.pageX+'px';
    h.style.top=e.pageY+'px';
    h.style.width=h.style.height='15px';
    h.style.animation='fly 3s linear forwards';
    document.body.appendChild(h);
    setTimeout(()=>h.remove(),3000);
});

// Page navigation
function nextPage(n){
    document.querySelectorAll('.page').forEach(p=>p.classList.remove('active'));
    document.getElementById('page'+n).classList.add('active');
    if(n===3) typeLetter();
}

// Yes/No buttons
function yesClicked(){ launchConfetti(); nextPage(3); }
function noClicked(){ alert("Aww bby üòî, that's not cute! Try again üíñ"); }

// Confetti
function launchConfetti(){
    for(let i=0;i<100;i++){
        let c=document.createElement('div');
        c.classList.add('confetti');
        c.style.left=Math.random()*100+'vw';
        c.style.background=['#ff3366','#ffcc33','#66ff66','#33ccff'][Math.floor(Math.random()*4)];
        c.style.animationDuration=(2+Math.random()*2)+'s';
        c.style.width=c.style.height=(5+Math.random()*10)+'px';
        document.body.appendChild(c);
        setTimeout(()=>c.remove(),3000);
    }
}

// Letter typing animation for page 3
const letterLines=[
    "Tyssmm mele cutu hubby üíñ I really really love you more than anything! üòò",
    "I'm very lucky to have you in my life.",
    "Mare bachy, ik hamare distance ki waja se hum AK sath nahi hai,",
    "but believe me, in sha Allah, AK dik ap or ma hamesha ke liye AK ho jayenge. ü•∞",
    "Is liye Valentine per kisi couple ko dekh kar sad nahi ho, oka that's like my boy üíï‚ù§Ô∏èüíå."
];

function typeLetter(){
    const p=document.getElementById('letterText'); p.innerHTML='';
    let lineIndex=0;
    function typeLine(){
        if(lineIndex<letterLines.length){
            let line=letterLines[lineIndex]; let charIndex=0;
            function typeChar(){
                if(charIndex<line.length){
                    p.innerHTML+=line[charIndex];
                    charIndex++;
                    setTimeout(typeChar,30);
                }else{ p.innerHTML+='<br>'; lineIndex++; setTimeout(typeLine,300); }
            }
            typeChar();
        }
    }
    typeLine();
}
</script>
